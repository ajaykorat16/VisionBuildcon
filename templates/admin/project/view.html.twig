{% extends 'admin/backend_layout.html.twig' %}

{% block title %}Project View{% endblock %}

{% block body %}
    <div class="text-color-grey mt-15">
        <h2>Project <small> view</small></h2>
    </div>
    <div class="mt-5 mb-5">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ project.id }}</td>
                </tr>

                <tr>
                    <th>Name</th>
                    <td>{{ project.name }}</td>
                </tr>

                <tr>
                    <th>Description</th>
                    <td>{{ project.description }}</td>
                </tr>
            </tbody>
        </table>
        <p class="fw-bold ps-2">Image</p>
            {% if project.images %}
            <div class="d-flex flex-wrap gap-2">
                {% for image in project.images %}
                    {% if image.project.id == project.id %}
                        <img src="{{ asset('image/' ~ image.image) }}" style="width: 250px; height: 250px">
                    {% endif %}
                {% endfor %}    
            </div>
            {% endif %}
    </div>
    <div class="text-center mb-5">
        <a href="{{ path('projects_list') }}"><i class="fa-solid fa-left-long"></i>  Back to list</a>
    </div>
{% endblock %}