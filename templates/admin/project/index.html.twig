{% extends 'admin/backend_layout.html.twig' %}

{% block javascripts %}
     <script src="{{ asset('js/admin/list.js') }}"></script>
     <script src="{{ asset('js/admin/delete.js') }}"></script>
     <script>
         Delete.onShowModal();
     </script>
 {% endblock %}

{% block body %}
    <div class="text-color-grey mt-15">
        <h2>Projects</h2>
    </div>
    <div class="form-group">
        {{ form_start(search,{'attr': {'id': 'search-form', 'novalidate': 'novalidate'}}) }}
        <div class=" d-flex" id="text-search">
            {{ form_widget(search.search, {'attr': {'class': 'form-control'}}) }}
            {{ form_widget(search.searchButton) }}
            <a href="{{ path('projects_list') }}" class="btn btn-primary reset">reset</a>
        </div>
        {{ form_end(search) }}
    </div>
    <div class="text-right mt-2">
        <a class="btn btn-primary w-5" href="{{ path('projects_create') }}"><i class="fa-solid fa-plus"></i> Add</a>
    </div>
    <div>
        <table class="table table-bordered table-striped m-auto" id="projectsList">
            <!-- Table header -->
            <thead>
            <tr class="text-color-grey text-center">
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th class="text-center">Action</th>
            </tr>
            </thead>
            <!-- Table body -->
            <tbody id="projects-list" data-total-items="{{ totalProjects }}">
                {% if project is not empty %}
                    {% for project in project %}
                        {% include 'admin/project/list-items.html.twig' %}
                    {% endfor %}
                {% else %}
                <tr class="no-results-row">
                    <td colspan="4" class="no-records text-center" style="color: grey;">no records found</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        <div class="load-more-loader">
            {% include 'gif/loader-gif.html.twig' with {w: 44, h: 44} %}
        </div>
    </div>
    {{ include('admin/_delete_modal.html.twig', { 'project': project }) }}
{% endblock %}