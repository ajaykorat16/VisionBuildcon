<!DOCTYPE html>
<html lang="en">
    <head>
    {% block head %}
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Vision Buildcon</title>
        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('img/icon.png') }}">
        <link href="{{ asset('css/admin/styles.css') }}" rel="stylesheet" media="screen">
        <link href="{{ asset('bootstrap-5.3.3-dist/css/bootstrap.css') }}">
        <link href="{{ asset('fontawesome-6.4.2/css/all.css') }}">
        <link href="{{ asset('css/dropzone/dropzone.min.css') }}">
        <link rel="stylesheet" href="https://unpkg.com/dropzone@5/dist/min/dropzone.min.css" type="text/css"/>
    {% endblock %}

    <script src="{{ asset('bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js')}}" crossorigin="anonymous"></script>
    <script src="{{ asset('js/admin/scripts.js') }}"></script>
    <script src="{{ asset('js/admin/datatables-simple-demo.js') }}"></script>
    <script src="{{ asset('js/jquery3.7.1.js') }}" crossorigin="anonymous"></script>
    <script src="{{ asset('fontawesome-6.4.2/js/all.js') }}"></script>
    <script src="{{ asset('js/admin/header.js') }}"></script>
    <script src="{{ asset('/bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('js/dropzone-min.js') }}"></script>
    <script src="{{ asset('js/dropzone.js') }}"></script>

    {% block javascripts %}
    {% endblock %}


    {% block stylesheets %}
    {% endblock %}
    </head>

   <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand-->
            <a href="{{ path('projects_list') }}" class="custom-logo-link transparent-custom-logo" rel="home" itemprop="url" aria-label="Construction Company">
                <span class="site-logo-img">
                <img src="/img/VISION-BUILDCON.png" class="custom-logo" alt="" decoding="async" style="max-width: 130px">
                    {# <img width="50" height="45" src="{{ asset('img/icon.png') }}" class="custom-logo" alt="" decoding="async" sizes="(max-width: 150px) 100vw, 150px"> #}
                    {# <span class="vision">VISION BUILDCON</span> #}
                </span>
            </a>    
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
            <!-- Navbar Search-->
            <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">

            </form>
            <!-- Navbar-->
            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="layoutSidenav">
            {% include 'admin/include/header.html.twig' %}
            <div id="layoutSidenav_content">
                <div class="flash-messages">
                    {% for success in app.flashes('success') %}
                        <div class="alert alert-success text-center">
                            {{ success }}
                        </div>
                    {% endfor %}
                    {% for warning in app.flashes('warning') %}
                        <div class="alert alert-danger text-center">
                            {{ warning }}
                        </div>
                    {% endfor %}
                </div>
                <main>
                    <div class="container-fluid px-4">
                        {% block body %}
                        {% endblock %}
                    </div>
                </main>  
            </div>
        </div>
    </body>
</html>
