<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <meta charset="UTF-8">
        <title>{% block title %}Vision Buildcon{% endblock %}</title>
        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('img/icon.png') }}">
    {% endblock %}

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="{{ asset('css/admin/login.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" media="screen">

    {% block stylesheets %}
    {% endblock %}

    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('js/jquery3.7.1.js') }}" crossorigin="anonymous"></script>
    <script src="{{ asset('js/admin/header.js') }}"></script> 

    {% block javascripts %}   
           
    {% endblock %}
</head>
<body>

     <!-- ======= Hero Section ======= -->
    <section id="hero">
       {% if error %}
           <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
       {% endif %}

        <div class="flash-messages">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

       {% block body %}

       {% endblock %}
    </section>
    <!-- End Hero -->

</body>
</html>
