{% extends 'admin/backend-layout.html.twig' %}

{% block title %}Team View{% endblock %}

{% block body %}
    <div class="text-color-grey mt-15">
        <h2>Team <small> view</small></h2>
    </div>
    <div class="mt-5 mb-5">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('image/' ~ team.teamPhoto) }}" width="100px" height="100px"></td>
            </tr>
            </tbody>
        </table>

    </div>
    <div class="text-center mt-15 ">
        <a href="{{ path('teams_list') }}"><i class="fa-solid fa-left-long"></i>  Back to list</a>
    </div>
{% endblock %}