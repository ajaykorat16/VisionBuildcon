<tr class="align-middle" id="team-row-{{ requests.id }}">
    <td class="text-center">{{ requests.id }}</td>
    <td class="text-center">{{ requests.name }}</td>
    <td class="text-center">{{ requests.email }}</td>
    <td class="text-center">{{ requests.subject }}</td>
    <td class="text-center">{{ requests.message|length >50 ? requests.message|slice(0,40) ~ '...' : requests.message }}</td>
</tr>